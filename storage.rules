rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Studio 업로드 경로: studio/{collection}/{entityId}/{assetType}/{language}/{fileName}
    match /studio/{collection}/{entityId}/{assetType}/{language}/{fileName} {
      // 인증된 사용자만 업로드 가능
      allow write: if request.auth != null;
      // 모든 사용자가 읽기 가능 (공개 이미지)
      allow read: if true;
    }
    
    // 더 짧은 경로도 지원 (entityId나 language가 없는 경우)
    match /studio/{collection}/{entityId}/{assetType}/{fileName} {
      allow write: if request.auth != null;
      allow read: if true;
    }
    
    match /studio/{collection}/{entityId}/{fileName} {
      allow write: if request.auth != null;
      allow read: if true;
    }
    
    match /studio/{collection}/{fileName} {
      allow write: if request.auth != null;
      allow read: if true;
    }
    
    // 다른 모든 경로는 거부
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

